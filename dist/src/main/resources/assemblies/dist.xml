<assembly>
    <id>dist</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../modules/target/modules</directory>
            <outputDirectory>/modules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../modules/target/m2-repo</directory>
            <outputDirectory>/m2-repo</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../clients/javascript/src/main/javascript</directory>
            <outputDirectory>/javascript</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../launcher/src/main/css</directory>
            <outputDirectory>/css</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../launcher/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0555</fileMode>
            <includes>
                <include>liveoak</include>
                <include>liveoak.bat</include>
                <include>create_application</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../launcher/etc</directory>
            <outputDirectory>/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../launcher/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <excludes>
                <exclude>extensions/mongo-launcher.json</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../launcher/apps/admin</directory>
            <outputDirectory>/apps/admin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../console/target/app</directory>
            <outputDirectory>/apps/admin/console</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../launcher/target</directory>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>
